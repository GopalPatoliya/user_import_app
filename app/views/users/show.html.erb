<p style="color: green"><%= notice %></p>
<h1>User Details</h1>

<div class="user-details">
  <p><strong>First Name:</strong> <%= @user.first_name %></p>
  <p><strong>Last Name:</strong> <%= @user.last_name %></p>
  <p><strong>Email:</strong> <%= @user.email %></p>
  <p><strong>Contact:</strong> <%= @user.contact %></p>
  <p><strong>Gender:</strong> <%= @user.gender %></p>
</div>

<div class="actions">
  <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-warning' %>
  <%= link_to 'Back', users_path, class: 'btn btn-secondary' %>
  <%= button_to 'Delete', user_path(@user), method: :delete, onclick: "return confirm('Are you sure?');", class: "link-button" %>
</div>
